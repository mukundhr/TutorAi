# LLM Selection
# Options: "gemini" or "llama"
DEFAULT_LLM=gemini

# Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_NAME=gemini-2.0-flash-exp  # Options: gemini-2.0-flash-exp, gemini-1.5-flash, gemini-1.5-pro

# Local LLaMA Configuration
LLAMA_MODEL_PATH=./models/llama-2-7b-chat.Q4_K_M.gguf

# Model configuration
MODEL_CONTEXT_LENGTH=4096
MODEL_MAX_TOKENS=512
MODEL_TEMPERATURE=0.7

# Question generation settings
DEFAULT_NUM_SAQ=5
DEFAULT_NUM_MCQ=5

# Enable/disable evaluation metrics
ENABLE_BERTSCORE=true
ENABLE_ROUGE=true

# RAG (Retrieval-Augmented Generation) Settings
ENABLE_RAG=true
RAG_EMBEDDING_MODEL=all-MiniLM-L6-v2  # Lightweight sentence transformer model
RAG_TOP_K=3  # Number of relevant chunks to retrieve
RAG_MIN_SCORE=0.3  # Minimum similarity score threshold